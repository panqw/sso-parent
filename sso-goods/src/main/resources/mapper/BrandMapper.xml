<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sso.goods.dao.BrandMapper">

    <select id="queryBrandList" resultType="com.sso.goods.entity.Brand"
            parameterType="com.sso.goods.entity.command.BrandCommand">
        SELECT id,name,image,letter
        FROM tb_brand
        WHERE is_deleted=0
        <if test="name !=null and name !=''">
            AND name LIKE CONCAT('%',#{name},'%')
        </if>
        <if test="letter !=null and letter !=''">
            AND letter LIKE CONCAT('%',#{letter},'%')
        </if>

        <if test="id !=null ">
            AND id=#{id}
        </if>
    </select>
</mapper>
